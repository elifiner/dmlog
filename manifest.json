{
  "manifest_version": 3,
  "name": "DMLog",
  "version": "1.0",
  "description": "Download entire conversation from Twitter DMs",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "downloads"
  ],
  "content_scripts": [
    {
      "matches": ["https://twitter.com/messages/*", "https://x.com/messages/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
